<div class="review">
  <div class="col-md-6">
    <h3>
      <% if context == 'product' %>
        for <%= link_to review.ailment.name, review.ailment %>
      <% else %>
        <%= link_to review.product.name, review.product %>
      <% end %>
      <small><%= time_ago_in_words(review.created_at) %> ago</small>
    </h3>
    <%= select_tag :effectiveness, options_for_select(EFFECTIVENESS_RATINGS, review.effectiveness), class: 'rating' %>
    <div>
      <strong>Method: </strong>
      <%= review.method %>
    </div>
    <div>
      <strong>Amount: </strong>
      <%= review.amount %>
      <% if review.method == 'smoking' %>
        g
      <% end %>
    </div>
  </div>

  <div class="col-md-6">

    <div>
      <strong>Positives: </strong>
      <%= review.positives %>
    </div>
    <div>
      <strong>Negatives: </strong>
      <%= review.negatives %>
    </div>
    <div>
      <strong>Other: </strong>
      <%= review.additional_info %>
    </div>
  </div>
</div>
