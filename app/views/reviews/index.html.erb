<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Ailment</th>
      <th>Product</th>
      <th>Method</th>
      <th>Amount</th>
      <th>Effectiveness</th>
      <th>Positives</th>
      <th>Negatives</th>
      <th>Additional info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.user_id %></td>
        <td><%= review.ailment_id %></td>
        <td><%= review.product_id %></td>
        <td><%= review.method %></td>
        <td><%= review.amount %></td>
        <td><%= review.effectiveness %></td>
        <td><%= review.positives %></td>
        <td><%= review.negatives %></td>
        <td><%= review.additional_info %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
