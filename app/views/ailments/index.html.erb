
  <div class="row">
    <%= form_tag ailments_path, method: :get do %>
      <div class="col-md-10">
          <input type="text" class="form-control big-search" name="search" placeholder="Search for an ailment" value="<%= params[:search] %>">

      </div>
      <div class="col-md-2">
        <% if params[:search] %>
          <%= link_to ailments_path, class: 'btn btn-lg btn-default btn-block' do %>
            <i class="fa fa-times"></i> clear
          <% end %>
        <% else %>
            <button type="submit" class="btn btn-lg btn-default btn-block">Submit</button>
        <% end %>
      </div>
    <% end %>
  </div>

<div class="row">
  <div class="col-md-12">
    <div class="ailments">
      <ul class="ailments">
        <% @ailments.all.each do |ailment| %>
        <li>
          <div class="ailment-name">
            <a href="<%= ailment_path(ailment) %>" class="ailment-name"><%= ailment.short_name %></a>
          </div>
        </li>
        <% end %>
      </ul>


    </div>
  </div>
</div>
