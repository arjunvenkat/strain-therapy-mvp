  border-radius: 3px;
  background-color: lightgray;
  cursor: pointer;
}

.set-ailment:active{
  display: inline-block;
  margin-top: 3px;
  border-bottom: none;
}

.description{
  display: inline-block;
  width: 795px;
  margin: 15px;
}

.effective-strains{
  width: 200px;
}

.strains{
  padding-left: 0px;
}

.strain-box{
  display: inline-block;
  vertical-align: top;
  width: 75px;
  font-size: 12px;
  margin-top: 5px;
  cursor: pointer;
}

.strain-type{
  background-color: lavender;
  padding: 3px;
}

.strain-name{
  background-color: lightgreen;
  height: 60px;
  line-height: 50px;
}

.info{
  border: 1px solid black;
  margin-top: 5px;
  padding: 10px;
}

.review-module{
  margin: 15px 10px;
}



/** Ailment show page **/

.ailment-name-alt {
  height: 165px;
