@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome";

$primary-color: #006E4B;
$default-home-bg: #D9E3CC;

/** Global **/

.alert {
  margin-bottom: 0;
  border-radius: 0;
}

footer {
  background-color: $primary-color;
  color: white;
  padding-top: 12em;

}

body{
  background-color: $default-home-bg;
}

nav{
  padding: 10px;
  border-bottom: 2px solid gray;
  background-color: $default-home-bg;
}

.navbar-default .navbar-nav > li > a {
  color: $primary-color;
  background-color: $default-home-bg;
}

.navbar {
  margin-bottom: 0;
  background-color: $default-home-bg;
}

.navbar-nav li a {
  padding-top: 30px;
  padding-bottom: 30px;
  background-color: $default-home-bg;
}


.navbar-home-link {
  padding: 10px;
  background-color: $default-home-bg;
}

.navbar-home-link img {
  max-width: 180px;
  background-color: $default-home-bg;
}

ul{
  list-style: none;
}

.top-text{
  padding-top: 10px;
  display: inline-block;
  font-size: 16px;
  width: 1000px;
  text-align: left;
  padding-left: 125px;
  vertical-align: top;
}

.ailment-landing{
  display: inline-block;
  width: 600px;
  text-align: left;
  vertical-align: top;
}

.ailment-name{
  background-color: $primary-color;
  line-height: 175px;
  width: 175px;
  height: 175px;
  float: left;
  text-align: center;
  color: white;
  border-radius: 100%;
  font-size: 1em;
  &:hover, &:visited, &:focus {
    color: white;
    text-decoration: none;
  }
  &:hover {
    background-color: darken($primary-color, 10%)
  }
}

.spacer-sm {
  margin-top: 0.5em;
}

.spacer-lg {
  margin-top: 2em;
}

.spacer {
  margin-top: 1em;
}

.spacer-2 {
  margin-top: 2em;
}

.spacer-left {
  margin-left: 1em;
}


.main-logo {
  width: 20%;
}

.left-column{
  display: inline-block;
  width: 200px;
  text-align: center;
  vertical-align: top;
}

.right-column{
  display: inline-block;
  width: 795px;
  margin: 25px;
}

.inline-name {
  color: $primary-color;
}

/** Splash **/

.splash-image{
  width: 100%;
  max-width: 600px;
}

/** Home **/

.home-links-container {
  text-align: center;
  a {
    display: inline-block;
    border: 3px solid $primary-color;
    color: $primary-color;
    margin-bottom: 20px;
    width: 100%;
    padding: 30px;
    font-size: 2em;
    text-decoration: none;
    // border: 1px solid gray;
  }

  a:hover {
    color: white;
    background-color: $primary-color;
    // border: 1px solid $primary-color;
  }
}
.page-heading {
  background-color: $primary-color;
  text-align: center;
  color: white;
  margin-bottom: 0;
  margin-top: 0;
  padding-bottom: 30px;
  padding-top: 30px;
}

.hero {
  background-position: center top;

  padding-bottom: 0;
  padding-top: 0;
  height: 300px;

  h2 {
    background-color: rgba(white, 0.9);
    padding: 24px;
  }
}

.hero-home {
  background-image: url(<%= asset_path('cannabis2.png') %>);
}

.hero-ailments {
  background-image: url(<%= asset_path('hero.png') %>);
  background-size: auto 100%;
}

.hero-products {
  background-image: url(<%= asset_path('powered_cannabis.png') %>);
  background-size: auto 100%;
}

.hero-about {
  background-image: url(<%= asset_path('cannabis.png') %>);
  background-size: auto 100%;
}

.jumbotron {
  margin-bottom: 0;
  .hero-screen {
    padding-top: 2em;
    padding-bottom: 2em;
    background-color: rgba(black, 0.3);
    height: 100%;
  }

}

.default-home-bg {
  background-color: #D9E3CC;
  padding-bottom: 2em;
}

.cannabis-background {
  background-image: url(<%= asset_path('cannabis.png') %>);
  background-position: left top;
  background-repeat: no-repeat;
  background-size: cover;

 padding-bottom: 24px;
}

.cannabis-image-text {
 background-color: rgba(white, 0.8);
 padding: 24px;
}

.home-container {
  margin-top: 4em;
  p {
    text-align: center;
    font-size: 1.65em;
  }

  img {
    width: 100%;
  }

  h2 {
    margin-top: 0;
  }
}

/* About */

.about-container {
  padding-top: 3em;
  font-size: 1.2em;
  p {
    margin-top: 1em;
  }
  li {
    list-style-type: disc;
  }
}


