/** Products **/

.product-container {
  h1 {
    margin-top: 0;
  }
}

.product-category-box {
  width: 100%;
  padding-top: 70px;
  padding-bottom: 70px;
  text-align: center;
  font-size: 1.5em;
}

.product-category-box.concentrates {
  background-color: lightgray;
}

.product-category-box.flowers {
  background-color: white;
  border: 1px solid gray;
}

.product-category-box.edibles {
  background-color: black;
